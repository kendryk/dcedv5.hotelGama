{% extends 'base.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
<section class="container home-content">
    <h1>Booking</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ booking.id }}</td>
            </tr>
            <tr>
                <th>Utilisateur</th>
                <td>{{ booking.user}}</td>
            </tr>
            <tr>
                <th>A réserver </th>
                <td>{{ booking.accomodation}}</td>
            </tr>
            <tr>
                <th>Pour le </th>
                <td>{{ booking.dateStart ? booking.dateStart|date('d-m-Y h\\h ') : '' }}</td>
            </tr>
            <tr>
                <th>Au </th>
                <td>{{ booking.dateEnd ? booking.dateEnd|date('d-m-Y h\\h ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('booking_index') }}">Revenir à la liste</a>


    <a class="btn btn-primary" href="{{ path('booking_edit', {'id': booking.id}) }}">éditer</a>

    {{ include('booking/_delete_form.html.twig') }}

</section>

{% endblock %}